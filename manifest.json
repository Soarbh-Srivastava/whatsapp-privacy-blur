{
  "manifest_version": 3,
  "name": "WhatsApp Blur Extension",
  "version": "1.0",
  "description": "Add blur effect to WhatsApp Web",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
